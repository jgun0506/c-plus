#define _CRT_SECURE_NO_WARNINGS
#include <string.h>
#include <iostream>

class string {
    char* str;
    int len;

public:
    string(char c, int n);  //char 로부터 문자열 생성
    string(const char* s); // char* 로부터 문자열 생성
    string(const string& s);
    ~string();

    void add_string(const string& s);//다른문자열 뒤에 다른문자열 붙이기   
    int strlen();//문자열 길이 리턴             

    void is_equel(const string& s);//문자열이 같은지 비교
    void compare(const string& s);//문자열 크기비교

    void print();

};

string::string(char c, int n) {
    len = n;
    str = new char[len + 1];
    for (int i = 0; i < len; i++) {
        str[i] = c;
    }
    str[len] = NULL;
}

string::string(const char* s) {
    int i = 0;
    while (s[i] != NULL)
        i++;

    len = i;
    str = new char[len + 1];

    for (int i = 0; i < len; i++) {
        str[i] = s[i];
    }
    str[len] = NULL;
}

string::string(const string& s) {
    len = s.len;
    str = new char[len + 1];

    for (int i = 0; i < len; i++) {
        str[i] = s.str[i];
    }
    str[len] = NULL;
}

string::~string() {
    if (str) delete[] str;
}

int string::strlen() {
    return len;
}

void string::add_string(const string& s) {
    len += s.len;
    char* temp = new char[len + 1];
    int i = 0;

    while (str[i]) {
        temp[i] = str[i];
        i++;
    }

    int j = 0;
    while (i + j < len) {
        temp[i + j] = s.str[j];
        j++;
    }

    delete[] str;
    temp[len] = NULL;

    str = temp;

}

void string::is_equel(const string& s) {//같으면 return true
    if (len != s.len) {
        std::cout << "다릅니다" << std::endl;
        return;
    }

    for (int i = 0; i < len; i++) {
        if (str[i] != s.str[i]) {
            std::cout << "다릅니다" << std::endl;
            return;
        }
    }
    std::cout << "같습니다" << std::endl;
    return;
}

void string::compare(const string& s) {//같으면 return 0;
    int i = 0;
    while (s.str[i] != NULL && str[i] != NULL) {
        if (str[i] == s.str[i]) {
            i++;
            continue;
        }
        if (str[i] > s.str[i]) {
            std::cout << str << "가" << s.str << "보다 크다" << std::endl;
            return;
        }
        else if (str[i] < s.str[i]) {
            std::cout << str << "가" << s.str << "보다 작다" << std::endl;
            return;
        }
    }

    if ((len - s.len) > 0) {
        std::cout << str << "가" << s.str << "보다 크다" << std::endl;
    }
    else if ((len - s.len) < 0) {
        std::cout << s.str << "가" << str << "보다 크다" << std::endl;
    }
    else {
        std::cout << s.str << "와" << str << "는 같다" << std::endl;
    }
    return;

}


void string::print() {
    std::cout << str << std::endl;
}

int main() {
    string s1('a', 5);
    string s2("c");
    string s3("bsd");

    s2.compare(s3);
   

}
